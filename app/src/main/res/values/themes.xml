<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidCodingChallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeDefault</item>
        <item name="colorPrimaryVariant">@color/orangeDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_favourite</item>
        <item name="android:buttonTint">#FFE401</item>
    </style>
</resources>